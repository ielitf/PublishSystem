<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danggui.publishsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".control.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ui.me.VersionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.LauncherViewPagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.check.CheckDetailsSchedulePreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.me.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.check.CheckNewsDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.publish.PublishNewsDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.LauncherActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>